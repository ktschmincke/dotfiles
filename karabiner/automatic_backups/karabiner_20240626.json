{
    "description": "Change Caps Lock to Control when used as modifier, Escape when used alone",
    "manipulators": [
        {
            "from": {
                "key_code": "caps_lock",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "left_control"
                }
            ],
            "to_if_alone": [
                {
                    "key_code": "escape"
                }
            ],
            "to_if_held_down": [
                {
                    "key_code": "left_control"
                }
            ],
            "type": "basic"
        }
    ]
},
